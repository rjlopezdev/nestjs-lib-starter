{
  "name": "nestjs-library-starter",
  "version": "0.0.0-development",
  "description": "A Project Template for Schematics",
  "license": "MIT",
  "keywords": [
    "schematics",
    "template"
  ],
  "author": {
    "name": "{{AUTHOR_NAME}}",
    "email": "{{AUTHOR_EMAIL}}"
  },
  "schematics": "./schematics/collection.json",
  "scripts": {
    "build": "npm run build:lib && npm run build:schematics && ./tools/package.sh",
    "build:lib": "npx tsc -p tsconfig.json",
    "build:schematics": "npx tsc -p tsconfig.schematics.json",
    "lint": "npm run lint:lib && npm run lint:schematics",
    "lint:lib": "npx eslint 'src/**'",
    "lint:schematics": "npx eslint 'schematics/**'",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@angular-devkit/core": "^9.0.2",
    "@angular-devkit/schematics": "^9.0.2",
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.0",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rjlopezdev/nestjs-lib-starter.git"
  }
}
